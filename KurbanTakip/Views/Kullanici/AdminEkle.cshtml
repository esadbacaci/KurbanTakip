@model UserSignUpViewModel
@{
    ViewData["Title"] = "Admin Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Admin Ekle</h5>
                <small class="text-muted float-end">Admin Bilgileriniz Giriniz</small>
            </div>
            <div class="card-body">
                <form method="post" asp-action="AdminEkle">
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Kullanıcı Adı</label>
                        <input asp-for="@Model.UserName" type="text" class="form-control" id="basic-default-fullname" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-phone">Şifre</label>
                        <input asp-for="@Model.Password" type="password" id="basic-default-phone" class="form-control phone-mask" required />
                    </div>
                 
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </form>

            </div>
        </div>
    </div>
</div>



