@using EntityLayer.Concrete
@model List<Carikart>
@{
	ViewData["Title"] = "CariListe";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
	<h5 class="card-header">Cari Tablosu</h5>
	<div class="table-responsive text-nowrap">
		<table class="table">
			<thead>
				<tr>
					<th>ID</th>
					<th>Ad Soyad</th>
					<th>Telefon</th>
					<th>Referans</th>
					<th>Açıklama</th>
					<th>Ülke</th>
					<th>İl</th>
					<th>İlçe</th>
				</tr>
			</thead>
			<tbody class="table-border-bottom-0">
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Id</td>
						<td><strong>@item.AdSoyad</strong></td>
						<td>@item.Telefon</td>
						<td>@item.Referans</td>
						<td>@item.Aciklama</td>
						<td>@item.Ulke</td>
						<td>@item.Il</td>
						<td>@item.Ilce</td>

						<td><a href="/Cari/CariSil/@item.Id" class="btn btn-danger">Sil</a></td>
						<td><a href="/Cari/CariGuncelle/@item.Id" class="btn btn-warning">Düzenle</a></td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>




