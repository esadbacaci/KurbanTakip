
@{
    ViewData["Title"] = "CariIslemGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
	<div class="col-xl">
		<div class="card mb-4">
			<div class="card-header d-flex justify-content-between align-items-center">
				<h5 class="mb-0">Cari Güncelle</h5>
				<small class="text-muted float-end">Cari Detayları</small>
			</div>
			<div class="card-body">
				<form method="post" asp-controller="Cari" asp-action="CariIslemGuncelle">
					<div class="mb-3">
						<label class="form-label" for="basic-default-fullname">Açıklama</label>
						<input value="@Model.Aciklama" name="Aciklama" type="text" class="form-control" id="Aciklama" required />
					</div>
					<div class="mb-3">
						<label class="form-label" for="basic-default-phone">Borç</label>
						<input value="@Model.Borc" type="number" id="Borc" class="form-control" name="Borc" required />
					</div>
					<div class="mb-3">
						<label class="form-label" for="basic-default-fullname">Alacak</label>
						<input value="@Model.Alacak" name="Alacak" type="text" class="form-control" id="basic-default-fullname" required />
					</div>
					<input type="hidden" name="Tarih" value="@DateTime.Now.ToShortDateString()" />
					<button type="submit" class="btn btn-primary">Güncelle</button>
				</form>
			</div>
		</div>
	</div>
</div>

