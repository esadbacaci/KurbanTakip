@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Bilgi Güncelle</h5>
                <!-- Account -->
       
                <hr class="my-0" />
                <div class="card-body">
                    <form asp-controller="Profil" asp-action="Index" method="post">
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label for="AdminName" class="form-label">Kullanıcı Adı</label>
                                <input class="form-control"
                                       type="text"
                                       id="AdminName"
                                       name="AdminName"
                                       value="@Model.AdminName"
                                       autofocus
                                       required/>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label for="AdminPassword" class="form-label">Şifre</label>
                                <input class="form-control" type="text" name="AdminPassword" id="AdminPassword" value="@Model.AdminPassword" required />
                            </div>
                        </div>
                        <div class="mt-2">
                            <button type="submit" class="btn btn-primary me-2">Değişiklikleri Kaydet</button>
                        </div>
                    </form>
                </div>
                <!-- /Account -->
            </div>
        </div>
    </div>
</div>
